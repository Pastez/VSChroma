{
	"name": "vschroma",
	"displayName": "VSChroma",
	"publisher": "pastez",
	"description": "VSCode extension that control colors of your Razer Chroma Keyboard",
	"icon": "images/icon.png",
	"galleryBanner": {
		"theme": "dark"
	},
	"version": "0.0.1",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/Pastez/chroma-js"
	},
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration":[
			{
				"title": "VSChroma",
				"properties": {
					"extension.vschroma.defaultColor": {
						"type": "string",
						"default": "04101a",
						"pattern": "[A-Fa-f0-9]{6}",
						"markdownDescription": "**Default color** used to iluminate keyboard",
						"title": "Default Color"
					},
					"extension.vschroma.terminalColor": {
						"type": "string",
						"default": "ffffff",
						"pattern": "[A-Fa-f0-9]{6}",
						"markdownDescription": "**Terminal** color of *~* key, when terminal is open",
						"title": "Terminal Color"
					},
					"extension.vschroma.taskColor": {
						"type": "string",
						"default": "ffffff",
						"pattern": "[A-Fa-f0-9]{6}",
						"markdownDescription": "**Running Task** color of *ESC* key",
						"title": "Task Color"
					},
					"extension.vschroma.errorColor": {
						"type": "string",
						"default": "ff0000",
						"pattern": "[A-Fa-f0-9]{6}",
						"markdownDescription": "**Error** color",
						"title": "Error Color"
					},
					"extension.vschroma.warningColor": {
						"type": "string",
						"default": "ffbb00",
						"pattern": "[A-Fa-f0-9]{6}",
						"markdownDescription": "**Warning** color",
						"title": "Warning Color"
					}
				}
			}
		],
		"commands": [
			{
				"command": "extension.vschroma.startAnimation",
				"title": "VSChrom: Start Wave Animation"
			},
			{
				"command": "extension.vschroma.stopAnimation",
				"title": "VSChrom: Stop Animation"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"nyc": "10.3.2",
		"rimraf": "2.6.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"@pastez/chromajs": "git+https://github.com/Pastez/chroma-js.git"
	}
}
